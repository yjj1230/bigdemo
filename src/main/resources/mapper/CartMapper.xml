<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.shopdemo.mapper.CartMapper">
    <resultMap id="BaseResultMap" type="org.example.shopdemo.entity.Cart">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="quantity" property="quantity"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="org.example.shopdemo.entity.Cart" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart (user_id, product_id, quantity)
        VALUES (#{userId}, #{productId}, #{quantity})
    </insert>

    <select id="findByUserIdAndProductId" resultMap="BaseResultMap">
        SELECT * FROM cart WHERE user_id = #{userId} AND product_id = #{productId}
    </select>

    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
        SELECT * FROM cart WHERE id = #{id}
    </select>

    <select id="findByUserId" parameterType="Long" resultMap="BaseResultMap">
        SELECT * FROM cart WHERE user_id = #{userId}
    </select>

    <update id="update" parameterType="org.example.shopdemo.entity.Cart">
        UPDATE cart
        <set>
            <if test="quantity != null">quantity = #{quantity},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM cart WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId" parameterType="Long">
        DELETE FROM cart WHERE user_id = #{userId}
    </delete>
</mapper>
