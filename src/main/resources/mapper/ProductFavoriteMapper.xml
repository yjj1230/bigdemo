<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.shopdemo.mapper.ProductFavoriteMapper">
    <resultMap id="BaseResultMap" type="org.example.shopdemo.entity.ProductFavorite">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insert" parameterType="org.example.shopdemo.entity.ProductFavorite" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product_favorite (user_id, product_id)
        VALUES (#{userId}, #{productId})
    </insert>

    <select id="findByUserAndProduct" resultMap="BaseResultMap">
        SELECT * FROM product_favorite 
        WHERE user_id = #{userId} AND product_id = #{productId}
        LIMIT 1
    </select>

    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT * FROM product_favorite 
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM product_favorite WHERE id = #{id}
    </delete>

    <delete id="deleteByUserAndProduct">
        DELETE FROM product_favorite 
        WHERE user_id = #{userId} AND product_id = #{productId}
    </delete>

    <select id="countByUserId" resultType="Long">
        SELECT COUNT(*) FROM product_favorite WHERE user_id = #{userId}
    </select>
</mapper>
