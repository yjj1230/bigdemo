<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.shopdemo.mapper.CategoryMapper">
    <resultMap id="BaseResultMap" type="org.example.shopdemo.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="level" property="level"/>
        <result column="icon" property="icon"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="org.example.shopdemo.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (name, parent_id, level, icon, sort_order, status)
        VALUES (#{name}, #{parentId}, #{level}, #{icon}, #{sortOrder}, #{status})
    </insert>

    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM category ORDER BY sort_order ASC
    </select>

    <select id="findByParentId" parameterType="Long" resultMap="BaseResultMap">
        SELECT * FROM category WHERE parent_id = #{parentId} ORDER BY sort_order ASC
    </select>

    <update id="update" parameterType="org.example.shopdemo.entity.Category">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="level != null">level = #{level},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM category WHERE id = #{id}
    </delete>
</mapper>
